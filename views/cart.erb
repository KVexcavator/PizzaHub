<h3>Your cart</h3>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">â„–</th>
      <th scope="col">Title</th>
      <th scope="col">Price</th>
      <th scope="col">Qty</th>
    </tr>
  </thead>
  <tbody>
  <% i=1 %>
  <% total_price=0 %>
  <% total_qty=0 %>
  <% @items.each do |item| %>   
    <tr>
      <th scope="row"><%= i %></th>
      <td><%= item[0].title %></td>
      <td><%= item[0].price %></td>
      <td><%= item[1] %></td>
    </tr>
    <% i +=1 %>
    <% total_price +=item[0].price*item[1].to_i %>
    <% total_qty +=item[1].to_i %>
  <% end  %>
    <tr>
      <th><b></b>#</th>
      <td><b>TOTAL</b></td>
      <td><b><%= total_price %></b></td>
      <td><b><%= total_qty %></b></td>
    </tr>
  </tbody>
</table>
<br>
<br>
<form action="/place_order" method="post" style="width:50%">
  <input type="hidden" name="order[orders_input]" value="<%= @orders_input %>">
  <div class="form-group">
    <label>Your name</label>
      <input type="text"  name="order[name]" value="<%=  %>"  class="form-control" id="name" placeholder="Inter your name">
  </div>
  <div class="form-group">
    <label>Pfone number</label>
      <input type="text"  name="order[pfone]" value="<%=  %>" class="form-control" id="pfone" placeholder="Inter pfone number">
  </div>
  <div class="form-group">
    <label>Delivery Address</label>
      <textarea   name="order[address]" value="<%=   %>" class="form-control" id="address" placeholder="Inter your address">
      </textarea>
  </div>
  <button type="submit" class="btn btn-primary">Buy</button> 
</form>